{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "CommonJS",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/*"
  ]
}